    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "prisma": "^6.17.0",
    "prisma-mock": "^0.12.2",
    "supertest": "^7.1.4",
