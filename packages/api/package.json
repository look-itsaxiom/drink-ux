{
  "name": "@drink-ux/api",
  "version": "1.0.0",
  "description": "TypeScript API backend for Drink-UX",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
